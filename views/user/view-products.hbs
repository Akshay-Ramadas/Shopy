
    
    <section class="Product">
        <div class="container">
            <div class="row mt-5">

                {{#each Products}}
                    <div class="col-md-3 " >

                        <div class="card mr-3 " style="width: 15rem;">
                        <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <h4>{{this.price}}</h4>
                            <p class="card-text">{{this.description}}</p>
                           <!-- <a href="/user/addtocart/{{this._id}}" class="btn btn-primary">Add To Cart</a> -->
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add To Cart</button>
                        </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

    </section>

 

   

