<section>

    <div class="container mt-5">

        <div class="row">

            <div class="col-md-6">

                <h2 class="text-center">Add Products</h2>
                <form action="/admin/add-products" method="post" enctype="multipart/form-data">

                    <label >Name</label>
                    <input class="form-control" type="text" name="name" required  >

                     <label >Price</label>
                    <input class="form-control" type="number" name="price" required  >

                     <label >Category</label>
                    <input class="form-control" type="text" name="category" required  >

                     <label >Description</label>
                    <input class="form-control" type="text" name="description" required  >
                    <div style="width: 300px;height: 50px;"></div>

                    <div class="form-group">
                     <label for="exampleFormControlFile1">Upload Images</label>
                     <input type="file" class="form-control-file bg-success" id="exampleFormControlFile1" name="Image" required >
                    </div>
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
                
            </div>
        </div>
    </div>
</section>