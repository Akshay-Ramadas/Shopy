<section>


    <div class="container">
      <div class="row mt-5 ">

        <a href="admin/add-Products" class="btn btn-success  ml-auto" ><b>Add Product</b></a>
      </div>

        
        


            <table class="table  mt-5 ">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col"></th> 
    </tr>
  </thead>
  <tbody>
    {{#each Products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width:50px;height:50px"src="/product-images/{{this._id}}.jpg"></td>
      <td>
         
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary  " ><b>Edit</b></a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.name}}?');"><b>Remove</b></a>
        
     
      </td>
     
    </tr>
    {{/each}}
   
  </tbody>
</table>
      
    </div>
</section>